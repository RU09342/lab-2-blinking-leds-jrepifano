#include <msp430g2231.h>



unsigned int blink = 1; //Set random bit to 1 so that I can tell the LEDs to light up

void main(void)
{
WDTCTL = WDTPW + WDTHOLD; // Stop watchdog timer
P1DIR |= (BIT0 + BIT6); // Set P1.0 and P1.6 to output direction
//P1OUT &= ~(BIT0 + BIT6); // Set the LEDs off
    while (1)
    {

        if(blink > 0)
        {
            P1OUT |= (BIT0 + BIT6); // Toggle P1.0 and P1.6 using exclusive-OR
            __delay_cycles(100000); // Delays the clock so that the blinking is actually visible
        }
    }
}
